<%= render 'user/unavibar' %>

<div class="container-fluid">
  <div class="row">
    <%= render 'user/usidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header"><%= @progress.name %> の進捗状況</h1>
      <%= simple_form_for [@progress] do |f| %>
        <div class=class="form-control" rows="3">
          <%= f.input :name, label: '作業場所名', as: :string %>
          <%= f.input :status, label: 'ステータス', as: :select, collection: [ ['未着手', 'undone'],[ '作業中', 'working'],[ '完了', 'done'] ] %>
          <%= f.input :goal, label: 'ゴールの状態', as: :text %>
          <%= f.input :percent, label: '進捗状況', as: :select, collection: 0..100 %>
        </div>

        <div class="actions">
          <%= f.submit '進捗状況を更新する' %>
        </div>
      <% end %>

    </div>

  </div>
</div>