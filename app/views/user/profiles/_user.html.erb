<h2>ユーザ情報</h2>
<%= f.simple_fields_for :user_id do |p| %>
    <%= p.input :nickname, label: 'ニックネーム', as: :string, input_html: { value: current_user.nickname } %>
    <%= p.input :Lname, label: '性', as: :string, input_html: { value: current_user.Lname } %>
    <%= p.input :Fname, label: '名', as: :string, input_html: { value: current_user.Fname } %>
    <%= p.input :Lname_kana, label: '性（カナ）', as: :string, input_html: { value: current_user.Lname_kana } %>
    <%= p.input :Fname_kana, label: '名（カナ）', as: :string, input_html: { value: current_user.Fname_kana } %>
    <%= p.input :age, label: '年齢', as: :select, collection: 15..100, selected: current_user.age %>
    <%= p.input :sex, label: '性別', as: :select, collection: [ ['男性', 'male'],[ '女性', 'female'] ], selected: current_user.sex %>
    <%= p.input :skype, label: 'skype id', as: :string, input_html: { value: @profile.user.skype} %>
<% end %>